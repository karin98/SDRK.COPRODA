@model IEnumerable<SDRK.COPRODA.Modelo.Pedido>
@using SDRK.COPRODA.Modelo

<br /><br />
<div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Numero de Pedido</th>
                <th>Cliente</th>
                <th>Direccion de Entrega</th>
                <th>Tipo de Entrega</th>
                <th>Fecha de Entrega</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (SDRK.COPRODA.Modelo.Pedido pedido in Model)
                {
                    <tr>
                        @* <td><a href="@Url.Action("PedidoEditar", new { idPedido = pedido.IdPedido, origen = "Pedidos" })">@pedido.IdPedido</a></td>*@
                        <td><a href="@Url.Action("PedidoEditar", "Pedido", new { idPedido = @pedido.IdPedido })">@pedido.NumeroPedido</a></td>
                        <td><a href="@Url.Action("ClienteEditar", "Cliente", new { IdCliente = @pedido.IdCliente })">@pedido.NombreCliente @pedido.ApellidoCliente</a></td>
                        <td>@pedido.NombreDireccionEntrega</td>
                        <td>@pedido.TipoEntrega</td>
                        <td>@pedido.FechaEntrega</td>
                        <td>@pedido.EstadoPedido</td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Numero de Pedido</th>
                <th>Cliente</th>
                <th>Direccion de Entrega</th>
                <th>Tipo de Entrega</th>
                <th>Fecha de Entrega</th>
                <th>Estado</th>
            </tr>
        </tfoot>
    </table>
</div>
